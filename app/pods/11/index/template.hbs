<ul class="list-reset p-0">
  {{#each model as |stock|}}
    <li class="mb-4">
      <h2>
        {{stock.symbol}}
      </h2>

      <h3 class="text-grey-darker">
        News articles
      </h3>

      <ul class="list-reset p-0">
        {{#each stock.articles as |article|}}
          <li>
            {{article.title}}

            <a href="#"
              {{action "toggleArticleComments" article}}
              class="text-grey-dark text-sm underline">

              {{if (contains article articlesShowingComments)
                'Hide' 'Show'
              }} comments

            </a>

            {{#if (contains article articlesShowingComments)}}
              <ul class="list-reset pl-4 mb-3 mt-1">
                {{#11/components/comments-provider
                  article=article
                  as |data|
                }}

                  {{#each data.comments as |comment|}}
                    <div class="mb-1">
                      {{comment.text}}
                    </div>
                  {{/each}}

                {{/11/components/comments-provider}}
              </ul>
            {{/if}}
          </li>
        {{/each}}
      </ul>
    </li>
  {{/each}}
</ul>
