<div class="mt-1">
  {{#link-to "5.index"
    class="text-5 text-grey-dark no-underline"}}
    Back to stock list
  {{/link-to}}
</div>

<h1>
  {{model.symbol}} reviews
</h1>

{{#each model.reviews as |review|}}
  <div class="mt-4">
    {{star-rating rating=review.rating}}
    <div class="mt-1 text-grey-darkest text-sm">
      {{review.name}}
    </div>
  </div>
{{/each}}

<p class="mt-4 pb-8 max-w-sm text-grey-darker text-sm">
  Note: Stock reviews are updated monthly.
</p>
